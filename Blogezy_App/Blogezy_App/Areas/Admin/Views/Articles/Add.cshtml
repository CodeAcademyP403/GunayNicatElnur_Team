@model ArticleModel
<!-- Row -->
<div class="row">

    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-block">
                <form asp-action="Add" asp-controller="Articles" method="post" enctype="multipart/form-data" class="form-horizontal form-material">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" class="form-control form-control-line">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="MetaKeywords" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="MetaKeywords" class="form-control form-control-line">
                            <span asp-validation-for="MetaKeywords"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MetaDescription" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="MetaDescription" class="form-control form-control-line">
                            <span asp-validation-for="MetaDescription"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-12"></label>
                            <textarea asp-for="Description" class="form-control form-control-line"></textarea>
                           @*    <input asp-for="Description" class="form-control form-control-line">*@
                             <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Detail" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Detail" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Detail"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="File" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input type="file" accept="image/*" asp-for="File" class="form-control form-control-line">
                            <span asp-validation-for="File"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tags" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Tags" class="form-control form-control-line">
                            <span asp-validation-for="Tags"></span>
                        </div>
                    </div>
                    <input type="submit" value="Send" />
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->


<script>
    $('#Description').summernote({
        placeholder: 'Hello bootstrap 4',
        tabsize: 2,
        height: 100
    });
</script>
