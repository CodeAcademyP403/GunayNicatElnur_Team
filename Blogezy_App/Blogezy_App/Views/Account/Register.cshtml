@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/main/css/style.css">
</head>
<body>
    <div class="outerwrapper">
        <div class="innerwrapper">
            <h2>login</h2>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <input asp-for="Name" type="text" id="name" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SurName" type="text" id="surname" placeholder="Surname">
                    <span asp-validation-for="SurName"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="email" id="email" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" id="password" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <input asp-for="ConfirmPassword" type="password" id="confirm" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <input type="checkbox" name="" id="checkbox">
                <p id="remember">Remember me</p>
                <input type="submit" value="Register" id="submit">
            </form>
        </div>

    </div>
</body>
</html>

